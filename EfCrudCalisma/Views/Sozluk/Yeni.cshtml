@model Girdi
@{
    ViewData["Title"] = "Yeni Girdi";
}
<h1>Yeni girdi</h1>

<form method="post">
    <div class="mb-3">
        <label asp-for="Sozcuk">Sozcuk</label>
        <input asp-for="Sozcuk" type="text" class="form-control" />
        <span asp-validation-for="Sozcuk" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Anlam">Anlam</label>
        <input asp-for="Anlam" type="text" class="form-control" />
        <span asp-validation-for="Anlam" class="text-danger"></span>
    </div>
    <button class="btn btn-primary">Ekle</button>
</form>